<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tosbi">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7382165076561685/8321772526"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.google.android.gms.ads.AdView>

    <ImageButton
        android:id="@+id/tosbiCounter"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:background="@drawable/btn_background"
        android:src="@drawable/tbff"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintEnd_toEndOf="@+id/counterText"
        app:layout_constraintStart_toStartOf="@+id/counterText"
        app:layout_constraintTop_toBottomOf="@+id/counterText"
        app:layout_constraintVertical_bias="0.626" />

    <TextView
        android:id="@+id/counterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="0"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="@+id/adView2"
        app:layout_constraintStart_toStartOf="@+id/adView2"
        app:layout_constraintTop_toBottomOf="@+id/adView2" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Reset"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tosbiCounter"
        app:layout_constraintStart_toStartOf="@+id/tosbiCounter" />

</androidx.constraintlayout.widget.ConstraintLayout>